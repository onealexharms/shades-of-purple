<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<%
  image_size_px = 1800
  background_color = "#eeeeee"
  statement_choice = ["#cc0000","#0066cc"]
  position_strength = [0.20, 0.40, 0.60]
  importance = [115, 135, 150]

  def circle(x, y, statement, strength, importance, _erbout)
  %><circle cx = '<%= x %>' cy= '<%= y %>' r= '<%= importance %>' 
             fill='<%= statement %>' fill-opacity = '<%= strength %>'/><%
  end
%>

<svg xmlns = "http://www.w3.org/2000/svg"
     version = "1.2"
     dxmlns:xlink = "http://www.w3.org/1999/xlink"
     width = "<%image_size_px.to_s + "px"%>"
     height = "<%image_size_px.to_s + "px"%>"
     viewBox = "0 0 1800 1800">
  <rect x = '0' y='0' height='1600' width='1600' fill='<%= background_color%>'/>
<%
  x_y_coordinate = [150, 300, 450, 600, 750]
  x_y_coordinate.each do | x |
    x_y_coordinate.each do | y | 
      circle x, y, statement_choice.sample, position_strength.sample, importance.sample, _erbout 
    end
  end
%>
</svg>
