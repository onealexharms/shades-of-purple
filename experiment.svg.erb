<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<%
  image_size_px = 1800
  number_of_questions = 36
  square_size = image_size_px / Math.sqrt(number_of_questions).to_i
  background_color = "rgb(230,230,230)"
  red = "rgb(255, 0, 0)"
  blue = "rgb(0, 0, 255)"
  green = "rgb(0, 255, 0)"
  position_strength_none = 0.25
  position_strength_some = 0.5
  position_strength_much = 0.75
  position_strength_full = 1.0
%>

<svg xmlns = "http://www.w3.org/2000/svg"
     version = "1.2"
     dxmlns:xlink = "http://www.w3.org/1999/xlink"
     width = "<%image_size_px.to_s + "px"%>"
     height = "<%image_size_px.to_s + "px"%>"
     viewBox = "0 0 1800 1800">
  <rect x = '0' y='0' height='1600' width='1600' fill='<%= background_color%>'/>
  <circle cx = '100' cy='100' r='100' fill='<%= blue %>' fill-opacity = '<%= position_strength_some.to_s %>'/>
  <circle cx = '500' cy='500' r='100' fill='<%= red %>' fill-opacity = '<%= position_strength_none.to_s %>'/>
</svg>
